<div class="adv-search-form">
  <div class="col-md-12">
    <%= form_for @search do |f| %>
      <h4>Advanced Search</h4>
      <div class="field">
        <div class="form-group col-md-12">
        <%= f.label 'Keyword in Business Name' %>
        <%= f.text_field :keyword, class: "form-control" %>
        </div>
        <br>
        <div class="form-group col-md-12">
        <%= f.label 'Keyword Comment' %>
        <%= f.text_field :not_name, class: "form-control" %>
        </div>
        <br>
        <div class="form-group col-md-12">
        <%= f.label 'Category' %>
        <%= select_tag("search[category]", options_for_select([nil, "Auto", "Entertainment", "Office", "Travel"])) %>
        </div>
        <div class="form-group col-md-12">
        <%= f.label 'Date Time' %>
        <%= f.date_field :between, class: "form-control" %>
        </div>
      </div>
      <div class="Actions"><%= f.submit "Advanced Search", class: "btn btn-primary" %></div>
    <% end %>
  </div>
</div>